[
    {
        "name": "${container_name}",
        "image": "${container_image}",
        "memory": "${memory}",
        "cpu": "${cpu}",
        "essential": true,
        "portMappings": [
        {
            "containerPort": "${container_port}",
            "hostPort": "${host_port}"
        },
        {
            "containerPort": 50000,
            "hostPort": 50000
        }
        ],
        "mountPoints": [
        {
            "sourceVolume": "${source_volume}",
            "containerPath": "${container_path}"
        }
        ]
    }
]